#include <stdio.h>
int main()
{
    int a[10][10], r, c;
    int *p; 
    printf("Enter number of rows: ");
    scanf("%d", &r);
    printf("Enter number of columns: ");
    scanf("%d", &c);
    p = &a[0][0];   
    printf("Enter the matrix elements:\n");
    for (int i = 0; i < r; i++)
    {
        for (int j = 0; j < c; j++)
        {
            scanf("%d", (p + i*c + j));
        }
    }
    printf("\nThe matrix is:\n");
    for (int i = 0; i < r; i++)
    {
        for (int j = 0; j < c; j++)
        {
            printf("%d ", *(p + i*c + j));
        }
        printf("\n");
    }
 return 0;
}
