#include <stdio.h>
int findMin(int arr[], int n)
{
    int min = arr[0], i;   
    for(i = 1; i < n; i++)
    {
        if(arr[i] < min)
        {
            min = arr[i];
        }
    }    
    return min;
}

int main()
{
    int n, i, min;    
    printf("Enter number of elements: ");
    scanf("%d", &n);  
    int arr[n];    
    printf("Enter %d elements:\n", n);
    for(i = 0; i < n; i++)
    {
        scanf("%d", &arr[i]);
    }    
    min = findMin(arr, n);
    printf("Minimum number = %d", min);    
    return 0;
}
