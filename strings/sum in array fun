#include <stdio.h>
int calculateSum(int marks[], int n)
{
    int sum = 0, i;    
    for(i = 0; i < n; i++)
    {
        sum = sum + marks[i];
    }    
    return sum;
}

int main()
{
    int n, i, sum;    
    printf("Enter number of subjects: ");
    scanf("%d", &n);  
    int marks[n];  
    printf("Enter marks of %d subjects:\n", n);
    for(i = 0; i < n; i++)
    {
        scanf("%d", &marks[i]);
    }
 sum = calculateSum(marks, n);    
    printf("Sum of marks = %d", sum); 
    return 0;
}
