#include <stdio.h>
int main()
{
    int n, i;    
    printf("Enter number of elements: ");
    scanf("%d", &n);
    int arr[n];
    int *p = arr;   
    printf("Enter %d elements:\n", n);
    for(i = 0; i < n; i++)
    {
        scanf("%d", p + i); 
    }
    printf("Array elements are:\n");
    for(i = 0; i < n; i++)
    {
        printf("%d ", *(p + i));   
    }
    return 0;
}
