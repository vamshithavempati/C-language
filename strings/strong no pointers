#include <stdio.h>
int factorial(int n)
{
    int fact = 1, i;
    for(i = 1; i <= n; i++)
        fact = fact * i;

    return fact;
}

int isStrong(int *num)
{
    int temp, digit, sum = 0;
    temp = *num;
    while(temp > 0)
    {
        digit = temp % 10;
        sum = sum + factorial(digit);
        temp = temp / 10;
    }
    if(sum == *num)
        return 1;
    else
        return 0;
}

int main()
{
    int number, result;
    printf("Enter a number: ");
    scanf("%d", &number);
    result = isStrong(&number);
    if(result == 1)
        printf("%d is a Strong Number", number);
    else
        printf("%d is not a Strong Number", number);
    return 0;
}
